@model EmployeeUpdateVM

@{
    ViewData["Title"] = "Employee Update";
}
<div class="card header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Employee Update</h6>
</div>
<div class="card-body">
    <form enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" placeholder="Enter name" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Surname</label>
            <input class="form-control" placeholder="Enter surname" asp-for="Surname">
            <span class="text-danger" asp-validation-for="Surname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input accept="image/*" class="form-control" type="file" asp-for="Image">
            <span class="text-danger" asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <label asp-for="DepartmentId"></label>
            <select class="form-control" asp-for="DepartmentId" asp-items='new SelectList(ViewBag.Departments,"Id","Name")'>
                <option disabled selected>
                    Department selected
                </option>
            </select>
            <span class="text-danger" asp-validation-for="DepartmentId"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>